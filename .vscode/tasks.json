{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run R Script",
            "type": "shell",
            "command": "Rscript",
            "args": ["${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Render R Markdown",
            "type": "shell",
            "command": "Rscript",
            "args": [
                "-e", 
                "rmarkdown::render('${file}')"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Start R Terminal",
            "type": "shell",
            "command": "R",
            "args": ["--interactive"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
